    <script>
      const dates = "<%= dates %>"
      const dates_arr = dates.split(",")
      const sugarlevels = "<%= sugar_level %>"
      const sugar_arr = sugarlevels.split(",")

      new Chart("myChart", {
        type: "line",
        data: {
          labels: dates_arr,
          datasets: [{
            fill: false,
            lineTension: 0,
            backgroundColor: "rgba(0,0,255,1.0)",
            borderColor: "rgba(0,0,255,0.1)",
            data: sugar_arr
          }]
        },
        options: {
          legend: { display: false },
          scales: {
            yAxes: [{
              ticks: {
                stepSize: 5,
                min: 80
              },
              scaleLabel: {
                display: true,
                labelString: 'Blood Glucose Level (mg/dL)'
              }



            },

            ],
            xAxes: [{
              scaleLabel: {
                display: true,
                labelString: 'Date (DD/MM/YYYY)'
              }



            },

            ],
          }
        }
      });
    </script>

</body>

</html>